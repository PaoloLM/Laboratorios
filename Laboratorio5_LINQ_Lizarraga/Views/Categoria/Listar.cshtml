@model IEnumerable<Laboratorio5_LINQ_Lizarraga.Models.CATEGORIA>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
</head>
<body>
    <div> 
        <center>
            <h1>Listar Categorias</h1><br />
            <table>

                <tr>
                    <td>ID</td>
                    <td>Categoria</td>
                </tr>

                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>@(categoria.IDCATEGORIA)</td>
                        <td>@(categoria.NOMBRE)</td>
                    </tr>
                }
                
            </table>
        </center>
    </div>
</body>
</html>
